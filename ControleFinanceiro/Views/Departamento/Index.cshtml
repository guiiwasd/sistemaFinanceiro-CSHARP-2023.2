@model IEnumerable<ControleFinanceiro.Models.Departamento>

@{
    ViewData["Title"] = "Lista de Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listagens</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartamentoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id=item.DepartamentoId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id=item.DepartamentoId }) |
                    @Html.ActionLink("Deletar", "Delete", new { id=item.DepartamentoId })
                </td>
            </tr>
        }
    </tbody>
</table>
